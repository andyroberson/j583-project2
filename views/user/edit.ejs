<!DOCTYPE html>
<html>
    <head>
        <title>Testing 123</title>
    </head>
    <body>
        <h3>Edit</h3>
        <p><a href="/users/delete/<%= user.username %>">Delete</a></p>
        <form action="/users/edit/<%= user.username %>/" method="POST">

            <p>
            <label>Full Name</label>
            <input type="text" id="name" name="name" value="<%= user.name %>" />
            </p>

            <p>
            <label>Username</label>
            <input type="text" id="username" name="username" value="<%= user.username %>" />
            </p>

            <p>
            <label>Github Link</label>
            <input type="text" id="link" name="link" value="<%= user.link %>" />
            </p>

            <p>
            <label>Address</label>
            <input type="text" id="address" name="address" value="<%= user.address %>" />
            </p>

            <p>
            <label>State</label>
            <input type="text" id="state" name="state" value="<%= user.state %>" />
            </p>

            <p>
            <label>Zip</label>
            <input type="text" id="zip" name="zip" value="<%= user.zip %>" />
            </p>

            <p>
            <label>Phone</label>
            <input type="text" id="phone" name="phone" value="<%= user.phone %>" />
            </p>

            <p><label>Notes</label>
            <input type="text" id="notes" name="notes" value="<%= user.notes %>" />
            </p>

           <button>Update</button>

        </form>
    </body>
</html>
